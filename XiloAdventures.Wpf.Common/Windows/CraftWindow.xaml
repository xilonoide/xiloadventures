<Window x:Class="XiloAdventures.Wpf.Common.Windows.CraftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fabricacion"
        Icon="/appicon.ico"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="900"
        Height="700"
        Background="#1E1E1E"
        Foreground="#F5F5F5">
    <Window.Resources>
        <!-- Estilo para botones de accion -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="12,6">
                            <ContentPresenter x:Name="ContentPresenter"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="RootBorder" Property="Background" Value="#2A2A2A"/>
                                <Setter TargetName="RootBorder" Property="BorderBrush" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botones de cantidad -->
        <Style x:Key="QuantityButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="RootBorder" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ListBox -->
        <Style x:Key="CraftListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <!-- Estilo para items de ListBox -->
        <Style x:Key="CraftListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4A6A4A"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#5A8A5A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botones de transferencia -->
        <Style x:Key="TransferButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="8" CornerRadius="8" Background="#2A2A2A" BorderBrush="#444444" BorderThickness="1">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <TextBlock Grid.Row="0"
                       Text="FABRICACION"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#66BBFF"
                       Margin="0,0,0,16"/>

            <!-- SECCION PRINCIPAL -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Panel izquierdo: Items disponibles -->
                <Border Grid.Column="0" Background="#333333" CornerRadius="8" Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="MATERIALES DISPONIBLES"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="#66BBFF"
                                   Margin="0,0,0,8"/>

                        <ListBox x:Name="AvailableItemsList"
                                 Grid.Row="1"
                                 Style="{StaticResource CraftListBoxStyle}"
                                 ItemContainerStyle="{StaticResource CraftListBoxItemStyle}"
                                 SelectionChanged="AvailableItemsList_SelectionChanged"
                                 MouseDoubleClick="AvailableItemsList_MouseDoubleClick">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#F5F5F5"/>
                                            <TextBlock Text=" x" Foreground="#AAAAAA"/>
                                            <TextBlock Text="{Binding AvailableQuantity}" Foreground="#AAAAAA"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding LocationText}" Foreground="#888888" FontSize="10"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Controles de cantidad para añadir -->
                        <StackPanel Grid.Row="2" Margin="0,12,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                <TextBlock Text="Cantidad: " VerticalAlignment="Center" Foreground="#AAAAAA"/>
                                <Button x:Name="AddMinusBtn"
                                        Content="-"
                                        Style="{StaticResource QuantityButtonStyle}"
                                        Click="AddMinusBtn_Click"/>
                                <TextBlock x:Name="AddQuantityText"
                                           Text="1"
                                           Width="40"
                                           TextAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           FontSize="14"/>
                                <Button x:Name="AddPlusBtn"
                                        Content="+"
                                        Style="{StaticResource QuantityButtonStyle}"
                                        Click="AddPlusBtn_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Botones centrales de transferencia -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8">
                    <Button x:Name="AddBtn"
                            Content=">"
                            Style="{StaticResource TransferButtonStyle}"
                            Margin="0,4"
                            Click="AddBtn_Click"
                            ToolTip="Añadir ingrediente"/>
                    <Button x:Name="RemoveBtn"
                            Content="&lt;"
                            Style="{StaticResource TransferButtonStyle}"
                            Margin="0,4"
                            Click="RemoveBtn_Click"
                            ToolTip="Quitar ingrediente"/>
                    <Button x:Name="ClearBtn"
                            Content="X"
                            Style="{StaticResource TransferButtonStyle}"
                            Margin="0,4"
                            Click="ClearBtn_Click"
                            ToolTip="Limpiar ingredientes"/>
                </StackPanel>

                <!-- Panel derecho: Ingredientes seleccionados -->
                <Border Grid.Column="2" Background="#333333" CornerRadius="8" Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="INGREDIENTES"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="#FFD700"
                                   Margin="0,0,0,8"/>

                        <ListBox x:Name="SelectedItemsList"
                                 Grid.Row="1"
                                 Style="{StaticResource CraftListBoxStyle}"
                                 ItemContainerStyle="{StaticResource CraftListBoxItemStyle}"
                                 SelectionChanged="SelectedItemsList_SelectionChanged"
                                 MouseDoubleClick="SelectedItemsList_MouseDoubleClick">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="#F5F5F5"/>
                                        <TextBlock Text=" x" Foreground="#AAAAAA"/>
                                        <TextBlock Text="{Binding SelectedQuantity}" Foreground="#FFD700" FontWeight="Bold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Info de receta detectada -->
                        <StackPanel Grid.Row="2" Margin="0,12,0,0">
                            <TextBlock x:Name="RecipeMatchText"
                                       Text=""
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#90EE90"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- FOOTER: Controles de fabricacion -->
            <StackPanel Grid.Row="2" Margin="0,16,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                    <TextBlock Text="Fabricar cantidad: " VerticalAlignment="Center" Foreground="#AAAAAA"/>
                    <Button x:Name="CraftMinusBtn"
                            Content="-"
                            Style="{StaticResource QuantityButtonStyle}"
                            Click="CraftMinusBtn_Click"/>
                    <TextBlock x:Name="CraftQuantityText"
                               Text="1"
                               Width="40"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"/>
                    <Button x:Name="CraftPlusBtn"
                            Content="+"
                            Style="{StaticResource QuantityButtonStyle}"
                            Click="CraftPlusBtn_Click"/>
                </StackPanel>
                <Button x:Name="CraftButton"
                        Content="FABRICAR"
                        Style="{StaticResource ActionButtonStyle}"
                        MinWidth="200"
                        Height="40"
                        Background="#2E7D32"
                        HorizontalAlignment="Center"
                        Click="CraftButton_Click"
                        IsEnabled="False"/>
                <TextBlock x:Name="MessageText"
                           Text=""
                           FontSize="12"
                           Foreground="#888888"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
