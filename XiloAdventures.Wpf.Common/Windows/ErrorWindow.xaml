<Window x:Class="XiloAdventures.Wpf.Common.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error - Xilo Adventures"
        Icon="/appicon.ico"
        Width="600"
        Height="400"
        MinWidth="400"
        MinHeight="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#1a1a1a"
        Foreground="White"
        ShowInTaskbar="True">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Se ha producido un error inesperado:"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#ff6b6b"
                   Margin="0,0,0,12"/>

        <Border Grid.Row="1"
                Background="#0d0d0d"
                BorderBrush="#333333"
                BorderThickness="1"
                CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="ErrorText"
                         IsReadOnly="True"
                         Background="Transparent"
                         Foreground="#cccccc"
                         FontFamily="Consolas"
                         FontSize="12"
                         BorderThickness="0"
                         TextWrapping="Wrap"
                         Padding="8"
                         VerticalScrollBarVisibility="Disabled"/>
            </ScrollViewer>
        </Border>

        <Button Grid.Row="2"
                Style="{StaticResource CommandButtonStyle}"
                Content="Copiar al portapapeles y cerrar"
                Margin="0,16,0,0"
                Padding="16,8"
                Click="CopyAndClose_Click"/>
    </Grid>
</Window>
