<Window x:Class="XiloAdventures.Wpf.Windows.AiDataGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generador de datos con IA"
        Width="550"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#2A2A2A"
        Foreground="White"
        WindowStyle="None"
        AllowsTransparency="True"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A7CA5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A8CB5"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4A8CB5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#555555"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#444444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#555555" BorderThickness="1" CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#303030" CornerRadius="6,6,0,0">
                <Grid>
                    <TextBlock Text="Generador de datos con IA"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="16,12"/>
                    <Button Content="âœ•"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0"
                            Width="28" Height="28"
                            Background="Transparent"
                            Foreground="#AAAAAA"
                            BorderThickness="0"
                            Click="CloseButton_Click"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#C04040"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Options -->
            <StackPanel Grid.Row="1" Margin="20,16,20,8">
                <!-- Do All Button -->
                <Button x:Name="DoAllButton"
                        Content="ðŸš€ Â¡Hazlo todo con un click!"
                        Height="40"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#2E7D32"
                        Foreground="White"
                        BorderBrush="#388E3C"
                        Margin="0,0,0,16"
                        Click="DoAllButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#388E3C"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Border" Property="Background" Value="#555555"/>
                                    <Setter Property="Foreground" Value="#888888"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Option 1: Create room descriptions -->
                <Border Background="#333333" CornerRadius="4" Margin="0,0,0,12" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ’¬ Crear descripciones de salas"
                                       FontSize="14"
                                       Foreground="White"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Genera descripciones automÃ¡ticas para las salas basÃ¡ndose en su nombre y el tema del mundo."
                                       FontSize="12"
                                       Foreground="#AAAAAA"
                                       TextWrapping="Wrap"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="Requiere: Salas sin descripciÃ³n, tema del mundo"
                                       FontSize="11"
                                       Foreground="#888888"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button x:Name="CreateDescriptionsButton"
                                Grid.Column="1"
                                Content="Crear"
                                Style="{StaticResource ActionButtonStyle}"
                                VerticalAlignment="Center"
                                Margin="12,0,0,0"
                                Click="CreateDescriptionsButton_Click"/>
                    </Grid>
                </Border>

                <!-- Option 2: Correct articles -->
                <Border Background="#333333" CornerRadius="4" Margin="0,0,0,12" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ“ Corregir artÃ­culos de nombres"
                                       FontSize="14"
                                       Foreground="White"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Usa IA para determinar el gÃ©nero gramatical (masculino/femenino) de objetos y puertas."
                                       FontSize="12"
                                       Foreground="#AAAAAA"
                                       TextWrapping="Wrap"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="Procesa: Objetos y puertas sin gÃ©nero asignado manualmente"
                                       FontSize="11"
                                       Foreground="#888888"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button x:Name="CorrectArticlesButton"
                                Grid.Column="1"
                                Content="Corregir"
                                Style="{StaticResource ActionButtonStyle}"
                                VerticalAlignment="Center"
                                Margin="12,0,0,0"
                                Click="CorrectArticlesButton_Click"/>
                    </Grid>
                </Border>

                <!-- Option 3: Generate images for all rooms -->
                <Border Background="#333333" CornerRadius="4" Margin="0,0,0,0" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ–¼ï¸ Generar imÃ¡genes para todas las salas"
                                       FontSize="14"
                                       Foreground="White"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Usa Stable Diffusion para crear imÃ¡genes basadas en las descripciones y el tema del mundo."
                                       FontSize="12"
                                       Foreground="#AAAAAA"
                                       TextWrapping="Wrap"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="Requiere: Tema del mundo, descripciones en las salas"
                                       FontSize="11"
                                       Foreground="#888888"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button x:Name="GenerateImagesButton"
                                Grid.Column="1"
                                Content="Generar"
                                Style="{StaticResource ActionButtonStyle}"
                                VerticalAlignment="Center"
                                Margin="12,0,0,0"
                                Click="GenerateImagesButton_Click"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Progress Section -->
            <Border x:Name="ProgressSection"
                    Grid.Row="2"
                    Background="#252525"
                    Margin="20,8,20,8"
                    Padding="12"
                    CornerRadius="4"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock x:Name="ProgressLabel"
                               Text="Procesando..."
                               FontSize="13"
                               Foreground="#CCCCCC"
                               Margin="0,0,0,8"/>
                    <ProgressBar x:Name="ProgressBar"
                                 Height="20"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"
                                 Background="#404040"
                                 Foreground="#3A7CA5"/>
                    <Grid Margin="0,4,0,0">
                        <TextBlock x:Name="TimeRemainingLabel"
                                   Text=""
                                   FontSize="12"
                                   Foreground="#AAAAAA"
                                   HorizontalAlignment="Left"/>
                        <TextBlock x:Name="ProgressStatus"
                                   Text="0 / 0"
                                   FontSize="12"
                                   Foreground="#888888"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Image Preview (only visible during image generation) -->
            <Border x:Name="ImagePreviewSection"
                    Grid.Row="3"
                    Background="#1A1A1A"
                    Margin="20,0,20,8"
                    Padding="8"
                    CornerRadius="4"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock x:Name="ImagePreviewLabel"
                               Text="Ãšltima imagen generada:"
                               FontSize="11"
                               Foreground="#888888"
                               Margin="0,0,0,6"/>
                    <Border Background="#000000" CornerRadius="2">
                        <Image x:Name="ImagePreview"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Cancel Button (only visible during processing) -->
            <Button x:Name="CancelButton"
                    Grid.Row="4"
                    Content="Cancelar"
                    Style="{StaticResource CloseButtonStyle}"
                    HorizontalAlignment="Right"
                    Margin="20,8,20,16"
                    Click="CancelButton_Click"
                    Visibility="Collapsed"/>
        </Grid>
    </Border>
</Window>
