<Window x:Class="XiloAdventures.Wpf.Windows.DarkErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error"
        Width="600" Height="400"
        MinWidth="400" MinHeight="250"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="#2A2A2A"
        Foreground="White"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Border BorderBrush="#555555" BorderThickness="1" CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="#1E1E1E"
                    CornerRadius="6,6,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="16,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Error Icon -->
                    <Ellipse Grid.Column="0"
                             Width="24" Height="24"
                             Fill="#C04040"
                             Margin="0,0,12,0"/>
                    <TextBlock Grid.Column="0"
                               Text="!"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>

                    <!-- Title -->
                    <TextBlock x:Name="TitleText"
                               Grid.Column="1"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Text="Error"/>

                    <!-- Close Button -->
                    <Button Grid.Column="2"
                            Content="X"
                            Width="28" Height="28"
                            Background="Transparent"
                            Foreground="#888888"
                            BorderThickness="0"
                            FontSize="14"
                            Click="CloseButton_Click"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#555555"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Message Content -->
            <ScrollViewer Grid.Row="1"
                          Margin="20,16"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <TextBox x:Name="MessageText"
                         FontSize="13"
                         FontFamily="Segoe UI, Arial"
                         Foreground="#CCCCCC"
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>
            </ScrollViewer>

            <!-- Buttons -->
            <Border Grid.Row="2"
                    Background="#252525"
                    CornerRadius="0,0,6,6"
                    Padding="16,12">
                <Button x:Name="CopyButton"
                        Content="ðŸ“‹ Copiar al portapapeles"
                        Height="32"
                        HorizontalAlignment="Center"
                        Padding="16,0"
                        Background="#444444"
                        Foreground="White"
                        BorderBrush="#555555"
                        Click="CopyButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#555555"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>
