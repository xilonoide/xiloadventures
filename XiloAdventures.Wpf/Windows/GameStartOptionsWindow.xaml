<Window x:Class="XiloAdventures.Wpf.Windows.GameStartOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opciones de partida"
        Height="320"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#222222"
        Foreground="White"
        WindowStyle="ToolWindow"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border BorderBrush="#555555" BorderThickness="1" CornerRadius="6" Background="#222222">
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="¿Cómo quieres empezar la partida?"
                       FontSize="16"
                       Margin="0,0,0,20"
                       TextAlignment="Center"
                       FontWeight="Bold"
                       Foreground="White"/>

            <StackPanel Margin="0,0,0,15">
                <CheckBox x:Name="SoundCheckBox"
                          Content="Sonido"
                          FontSize="14"
                          VerticalContentAlignment="Center"
                          Foreground="White"
                          Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="LlmCheckBox"
                              Content="Usar IA"
                              FontSize="14"
                              VerticalContentAlignment="Center"
                              Foreground="White"/>
                    <TextBlock Text="?"
                               Margin="6,0,0,0"
                               Foreground="Yellow"
                               FontWeight="Bold"
                               Cursor="Hand"
                               VerticalAlignment="Center"
                               MouseLeftButtonDown="LlmInfoIcon_MouseLeftButtonDown">
                        <TextBlock.ToolTip>
                            <TextBlock Text="Activa la IA para que el juego entienda mejor comandos complejos o mal escritos. Haz clic para más detalles." />
                        </TextBlock.ToolTip>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <TextBlock Text="Puedes cambiar ambas opciones en cualquier momento durante la partida."
                       FontSize="14"
                       Foreground="#AAAAAA"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,15"/>

            <Button x:Name="PlayButton"
                    Style="{StaticResource CommandButtonStyle}"
                    Click="PlayButton_Click"
                    HorizontalAlignment="Stretch">
                <TextBlock Text="Jugar"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Button>
        </StackPanel>
    </Border>
</Window>
