<Window x:Class="XiloAdventures.Wpf.Windows.ParserDictionaryEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor del Diccionario del Parser"
        Icon="/appicon.ico"
        WindowStartupLocation="CenterOwner"
        Width="700"
        Height="550"
        MinWidth="500"
        MinHeight="400"
        Background="#1E1E1E"
        Foreground="#F5F5F5">

    <Window.Resources>
        <!-- Estilo para pestaÃ±as oscuras -->
        <Style x:Key="DarkTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1,1,1,0"
                                CornerRadius="4,4,0,0"
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#5A5A5A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para DataGrid oscuro -->
        <Style x:Key="DarkDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3A3A3A"/>
            <Setter Property="RowBackground" Value="#2A2A2A"/>
            <Setter Property="AlternatingRowBackground" Value="#252525"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
        </Style>

        <!-- Estilo para cabeceras de columna -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Estilo para celdas -->
        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#4A6A8A"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para filas -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#4A6A8A"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#353535"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botones pequeÃ±os -->
        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#5A5A5A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ListBox oscuro -->
        <Style x:Key="DarkListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="DarkListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="Padding" Value="8,6"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#4A6A8A"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#353535"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Margin="12" CornerRadius="8" Background="#2A2A2A" BorderBrush="#444444" BorderThickness="1">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TÃ­tulo y descripciÃ³n -->
            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="ðŸ“– Diccionario del Parser"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#F5F5F5"/>
                <TextBlock Text="Define sinÃ³nimos para que el parser reconozca diferentes formas de referirse a verbos, objetos y adjetivos en tu mundo."
                           FontSize="12"
                           Foreground="#AAAAAA"
                           TextWrapping="Wrap"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- PestaÃ±as -->
            <TabControl x:Name="MainTabControl"
                        Grid.Row="1"
                        Background="Transparent"
                        BorderBrush="#444444"
                        Padding="0">

                <!-- Verbos -->
                <TabItem Header="ðŸŽ¬ Verbos" Style="{StaticResource DarkTabItemStyle}">
                    <Border Background="#2A2A2A" BorderThickness="0" Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Palabras base y sus sinÃ³nimos (ej: examinar â†’ inspeccionar, observar, mirar)"
                                       Foreground="#888888"
                                       FontSize="11"
                                       Margin="0,0,0,8"/>

                            <!-- Verbos incluidos por defecto -->
                            <Expander Grid.Row="1"
                                      Header="â„¹ï¸ Verbos reconocidos por defecto (clic para ver)"
                                      Foreground="#7CB3F0"
                                      FontSize="11"
                                      Margin="0,0,0,8"
                                      IsExpanded="False">
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="8" Margin="0,4,0,0">
                                    <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                                        <TextBlock x:Name="DefaultVerbsText" TextWrapping="Wrap" Foreground="#888888" FontSize="10"/>
                                    </ScrollViewer>
                                </Border>
                            </Expander>

                            <DataGrid x:Name="VerbsDataGrid"
                                      Grid.Row="2"
                                      Style="{StaticResource DarkDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Verbo base" Binding="{Binding Key}" Width="150">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="8,4"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="Foreground" Value="#7CB3F0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="SinÃ³nimos (separados por comas)" Binding="{Binding Value}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="8,4"/>
                                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="âž• AÃ±adir" Style="{StaticResource SmallButtonStyle}" Click="AddVerb_Click"/>
                                <Button Content="âœï¸ Editar" Style="{StaticResource SmallButtonStyle}" Click="EditVerb_Click"/>
                                <Button Content="ðŸ—‘ï¸ Eliminar" Style="{StaticResource SmallButtonStyle}" Click="DeleteVerb_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- Sustantivos -->
                <TabItem Header="ðŸ“¦ Sustantivos" Style="{StaticResource DarkTabItemStyle}">
                    <Border Background="#2A2A2A" BorderThickness="0" Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Nombres de objetos y sus sinÃ³nimos (ej: espada â†’ sable, arma, hoja)"
                                       Foreground="#888888"
                                       FontSize="11"
                                       Margin="0,0,0,8"/>

                            <!-- Sustantivos incluidos por defecto -->
                            <Expander Grid.Row="1"
                                      Header="â„¹ï¸ Sustantivos reconocidos por defecto (clic para ver)"
                                      Foreground="#8CD47E"
                                      FontSize="11"
                                      Margin="0,0,0,8"
                                      IsExpanded="False">
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="8" Margin="0,4,0,0">
                                    <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                                        <TextBlock x:Name="DefaultNounsText" TextWrapping="Wrap" Foreground="#888888" FontSize="10"/>
                                    </ScrollViewer>
                                </Border>
                            </Expander>

                            <DataGrid x:Name="NounsDataGrid"
                                      Grid.Row="2"
                                      Style="{StaticResource DarkDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Sustantivo base" Binding="{Binding Key}" Width="150">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="8,4"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="Foreground" Value="#8CD47E"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="SinÃ³nimos (separados por comas)" Binding="{Binding Value}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="8,4"/>
                                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="âž• AÃ±adir" Style="{StaticResource SmallButtonStyle}" Click="AddNoun_Click"/>
                                <Button Content="âœï¸ Editar" Style="{StaticResource SmallButtonStyle}" Click="EditNoun_Click"/>
                                <Button Content="ðŸ—‘ï¸ Eliminar" Style="{StaticResource SmallButtonStyle}" Click="DeleteNoun_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- Adjetivos -->
                <TabItem Header="ðŸŽ¨ Adjetivos" Style="{StaticResource DarkTabItemStyle}">
                    <Border Background="#2A2A2A" BorderThickness="0" Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Adjetivos descriptivos y sus sinÃ³nimos (ej: rojo â†’ bermellÃ³n, carmesÃ­, escarlata)"
                                       Foreground="#888888"
                                       FontSize="11"
                                       Margin="0,0,0,8"/>

                            <DataGrid x:Name="AdjectivesDataGrid"
                                      Grid.Row="1"
                                      Style="{StaticResource DarkDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Adjetivo base" Binding="{Binding Key}" Width="150">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="8,4"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="Foreground" Value="#E8A87C"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="SinÃ³nimos (separados por comas)" Binding="{Binding Value}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Padding" Value="8,4"/>
                                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="âž• AÃ±adir" Style="{StaticResource SmallButtonStyle}" Click="AddAdjective_Click"/>
                                <Button Content="âœï¸ Editar" Style="{StaticResource SmallButtonStyle}" Click="EditAdjective_Click"/>
                                <Button Content="ðŸ—‘ï¸ Eliminar" Style="{StaticResource SmallButtonStyle}" Click="DeleteAdjective_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- Stopwords -->
                <TabItem Header="ðŸš« Ignorar" Style="{StaticResource DarkTabItemStyle}">
                    <Border Background="#2A2A2A" BorderThickness="0" Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Palabras que el parser debe ignorar (artÃ­culos, preposiciones, etc.)"
                                       Foreground="#888888"
                                       FontSize="11"
                                       Margin="0,0,0,8"/>

                            <!-- Palabras ignoradas por defecto -->
                            <Expander Grid.Row="1"
                                      Header="â„¹ï¸ Palabras ignoradas por defecto (clic para ver)"
                                      Foreground="#C792EA"
                                      FontSize="11"
                                      Margin="0,0,0,8"
                                      IsExpanded="False">
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="8" Margin="0,4,0,0">
                                    <TextBlock x:Name="DefaultIgnoredText" TextWrapping="Wrap" Foreground="#888888" FontSize="10"/>
                                </Border>
                            </Expander>

                            <ListBox x:Name="StopwordsListBox"
                                     Grid.Row="2"
                                     Style="{StaticResource DarkListBoxStyle}"
                                     ItemContainerStyle="{StaticResource DarkListBoxItemStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Foreground="#C792EA"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="âž• AÃ±adir" Style="{StaticResource SmallButtonStyle}" Click="AddStopword_Click"/>
                                <Button Content="ðŸ—‘ï¸ Eliminar" Style="{StaticResource SmallButtonStyle}" Click="DeleteStopword_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>

            <!-- Botones de acciÃ³n -->
            <Grid Grid.Row="2" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="âœ“ Aceptar"
                        Style="{StaticResource CommandButtonStyle}"
                        Click="Accept_Click"/>
                <Button Grid.Column="2"
                        Content="âœ• Cancelar"
                        Style="{StaticResource CommandButtonStyle}"
                        IsCancel="True"
                        Click="Cancel_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
