<Window x:Class="XiloAdventures.Wpf.Windows.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xilo Adventures - Inicio"
        Icon="/appicon.ico"
        Height="450"
        Width="925"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#222222"
        Foreground="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Crear nuevo mundo -->
            <Border Grid.Column="0"
                    Background="#444444"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="0,0,4,10"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    ToolTip="Crear nuevo mundo"
                    MouseLeftButtonUp="CreateNewWorld_Click">
                <TextBlock Text="âž•"
                           FontSize="16"
                           Foreground="#50C878"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Eliminar mundo -->
            <Border x:Name="DeleteWorldIcon"
                    Grid.Column="1"
                    Background="#444444"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="0,0,4,10"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    ToolTip="Eliminar mundo seleccionado"
                    MouseLeftButtonUp="DeleteWorldIcon_Click">
                <TextBlock Text="âž–"
                           FontSize="16"
                           Foreground="#FF6B6B"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Abrir carpeta worlds -->
            <Border Grid.Column="2"
                    Background="#444444"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="0,0,4,10"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    ToolTip="Abrir carpeta de mundos"
                    MouseLeftButtonUp="OpenWorldsFolder_Click">
                <TextBlock Text="ðŸ“"
                           FontSize="16"
                           Foreground="#FFD700"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Generador de mundos -->
            <Border Grid.Column="3"
                    Background="#444444"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="20,0,4,10"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    ToolTip="Generador de mundos con IA"
                    MouseLeftButtonUp="WorldGenerator_Click">
                <TextBlock Text="âœ¨"
                           FontSize="16"
                           Foreground="#BB88FF"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Crear mundo desde zonas -->
            <Border Grid.Column="4"
                    Background="#444444"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="0,0,0,10"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    ToolTip="Unir zonas .json"
                    MouseLeftButtonUp="CreateFromZones_Click">
                <TextBlock Text="ðŸ—‚ï¸"
                           FontSize="16"
                           Foreground="#4FC3F7"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Donaciones -->
            <Border Grid.Column="6"
                    Background="#3a5a3a"
                    CornerRadius="4"
                    Padding="10,6"
                    Margin="0,0,0,10"
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    MouseLeftButtonUp="DonateLink_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="&#x2764;"
                               FontSize="14"
                               Foreground="#FF6B6B"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock FontSize="12"
                               Foreground="#90EE90"
                               VerticalAlignment="Center">
                        <Run FontWeight="SemiBold">Â¡Se aceptan donaciones!</Run>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <ListBox x:Name="WorldsList"
                 Grid.Row="1"
                 Background="#333333"
                 Foreground="White"
                 BorderBrush="#555555"
                 MouseDoubleClick="WorldsList_MouseDoubleClick" />

        <Grid Grid.Row="2"
              Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="NewGameButton"
                    Grid.Column="1"
                    Margin="0"
                    Style="{StaticResource CommandButtonStyle}"
                    Click="NewGameButton_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Text="&#xE109;" Margin="0,0,8,0" />
                    <TextBlock Text="Nueva partida"/>
                </StackPanel>
            </Button>
            <Button x:Name="LoadGameButton"
                    Grid.Column="3"
                    Margin="0"
                    Style="{StaticResource CommandButtonStyle}"
                    Click="LoadGameButton_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Text="&#xE8E5;" Margin="0,0,8,0" />
                    <TextBlock Text="Cargar partida"/>
                </StackPanel>
            </Button>
            <Button x:Name="EditorButton"
                    Grid.Column="5"
                    Margin="0"
                    Style="{StaticResource CommandButtonStyle}"
                    Click="EditorButton_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Text="&#xE70F;" Margin="0,0,8,0" />
                    <TextBlock Text="Editor"/>
                </StackPanel>
            </Button>
            <Button x:Name="ExitButton"
                    Grid.Column="7"
                    Margin="0"
                    Style="{StaticResource CommandButtonStyle}"
                    Click="ExitButton_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Text="&#xE8BB;" Margin="0,0,8,0" />
                    <TextBlock Text="Salir"/>
                </StackPanel>
            </Button>
        </Grid>
        <Border x:Name="LoadingOverlay"
                Grid.RowSpan="3"
                Background="#AA000000"
                Visibility="Collapsed">
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="260"
                    Background="#222222"
                    Padding="16"
                    CornerRadius="6">
                <StackPanel>
                    <TextBlock x:Name="LoadingText"
                               Text="Cargando..."
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <ProgressBar IsIndeterminate="True" Height="12"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
